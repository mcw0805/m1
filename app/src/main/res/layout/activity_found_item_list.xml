<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="vertical"
    tools:context="com.example.mcw0805.wheres_my_stuff.Controller.LostItemListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/searchBarEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/filter_spinner"
            android:hint="Search Found Items"
            android:icon="@drawable/ic_action_search"
            android:paddingLeft="10dp"
            android:paddingTop="0dp"
            android:gravity="center"/>
        <Spinner
            android:id="@+id/filter_spinner"
            android:layout_width="110dp"
            android:layout_height="35dp"
            android:gravity="end" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent">
    <ListView
        android:id="@+id/found_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="#000000"
        android:dividerHeight="1dp"
        android:listSelector="#F8F8FF" />
    </LinearLayout>

</LinearLayout>
