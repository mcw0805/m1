<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dash_bottom"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/cardview_light_background"
    android:orientation="vertical"
    tools:context="com.example.mcw0805.wheres_my_stuff.Controller.Dash_Bottom_Fragment">


    <TextView
        android:id="@+id/reportLost_txt"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:text="Submit New Item"
        android:textSize="16sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/lost_txt"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/reportLost_txt"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:text="Lost Items Near Me"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/found_txt"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/lost_txt"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:text="Found Items Near Me"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/donate_txt"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/found_txt"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:text="Donate Items"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/donate_list"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/donate_txt"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:text="List of Donations"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/reportFound_txt"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/donate_list"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:text="My Submitted Items"
        android:textSize="16sp"
        android:textStyle="bold" />
    

</RelativeLayout>