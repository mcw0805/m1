<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dash_bottom"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/cardview_light_background"
    android:orientation="vertical">

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_keyboard_arrow_up_black_24dp"
        android:id="@+id/imageView" />


    <TextView
        android:id="@+id/reportLost_txt"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:text="Report/Request Items"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true" />


    <TextView
        android:id="@+id/lost_txt"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/reportLost_txt"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:text="Lost Items Near Me"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/found_txt"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/lost_txt"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:text="Found Items Near Me"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/donate_txt"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/found_txt"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:text="Donated Items Near Me"
        android:textSize="28sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/donate_list"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/donate_txt"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:text="Help Out People Near Me"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/reportFound_txt"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/donate_list"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:text="My Submitted Items"
        android:textSize="28sp"
        android:textStyle="bold" />


</RelativeLayout>